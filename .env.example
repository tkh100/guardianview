# Copy this file to .env and fill in the values

# Required: Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=replace_with_random_64_char_string
ENCRYPTION_KEY=replace_with_random_64_char_hex_string

# Required: Password for the initial admin account
ADMIN_PASSWORD=changeme

# Optional: Port (default 3001)
PORT=3001

# Optional: Dexcom follower account credentials (if any campers use Follow mode)
DEXCOM_FOLLOWER_USERNAME=
DEXCOM_FOLLOWER_PASSWORD=

# Optional: Database path (default ./data/guardianview.db)
DB_PATH=./data/guardianview.db

# Optional: Google Sheets automated sync for 10-year record retention
# Create a Google Cloud service account, share the sheet with its email, and paste:
#   GOOGLE_SHEETS_ID — the spreadsheet ID from the URL (between /d/ and /edit)
#   GOOGLE_SERVICE_ACCOUNT_JSON — the full service account JSON as a single line
GOOGLE_SHEETS_ID=
GOOGLE_SERVICE_ACCOUNT_JSON=

# Optional: Anthropic API key for the AI helper assistant
ANTHROPIC_API_KEY=
